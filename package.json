{
  "private": "false",
  "name": "@mistakster/mongodb-queue",
  "version": "1.0.0",
  "description": "Use your existing MongoDB as a local queue",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mongodb",
    "queue",
    "message-queue",
    "task-queue",
    "bun",
    "nodejs"
  ],
  "author": "Andrew Chilton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mistakster/mongodb-queue.git"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^16",
    "typescript": "^5"
  },
  "peerDependencies": {
    "mongodb": ">=4.0.0 <8.0.0"
  },
  "engines": {
    "node": ">=16.20.0"
  }
}
